# 10x Marketing Team Configuration
# Copy this file to .env and fill in your values

# ===========================================
# RENDERING MODE
# ===========================================
# Options: local, lambda, cloudrun, remotion-cloud
RENDERING_MODE=local

# ===========================================
# LOCAL RENDERING (Default - No setup needed)
# ===========================================
# FFmpeg and Chromium are auto-installed by Remotion
# Just run: npm run setup

# ===========================================
# AWS LAMBDA (Optional)
# ===========================================
REMOTION_AWS_ACCESS_KEY_ID=
REMOTION_AWS_SECRET_ACCESS_KEY=
REMOTION_AWS_REGION=us-east-1
REMOTION_LAMBDA_FUNCTION_NAME=remotion-render

# ===========================================
# GCP CLOUD RUN (Optional)
# ===========================================
REMOTION_GCP_PROJECT_ID=
REMOTION_GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=

# ===========================================
# REMOTION CLOUD (Optional - Easiest)
# ===========================================
REMOTION_CLOUD_API_KEY=

# ===========================================
# SERVE URL (Required for cloud rendering)
# ===========================================
REMOTION_SERVE_URL=http://localhost:3000

# ===========================================
# AGENTATION MODE
# ===========================================
# Options: development, always, manual, off
NEXT_PUBLIC_AGENTATION_MODE=development

# ===========================================
# AI INTEGRATION (Optional)
# ===========================================
ANTHROPIC_API_KEY=
