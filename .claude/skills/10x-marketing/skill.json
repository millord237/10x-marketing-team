{
  "name": "10x-marketing",
  "version": "3.0.0",
  "description": "AI Marketing Agency with 20 agents, Remotion Studio & Agentation",
  "author": {
    "name": "10x.in",
    "url": "https://10x.in"
  },
  "license": "MIT",
  "homepage": "https://10x.in",

  "metadata": {
    "clawdbot": {
      "emoji": "ðŸ”¥",
      "skillKey": "10x-marketing",
      "os": ["darwin", "linux", "win32"],
      "requires": {
        "anyBins": ["node", "npm"]
      }
    }
  },

  "config": {
    "outputDir": "./output",
    "videosDir": "./output/videos",
    "imagesDir": "./output/images",
    "exportsDir": "./output/exports"
  },

  "commands": {
    "/10x": {
      "description": "Activate full 20-agent marketing agency",
      "file": "../../commands/10x.md"
    },
    "/10x-setup": {
      "description": "Setup wizard with preferences",
      "file": "../../commands/10x-setup.md"
    },
    "/10x-video": {
      "description": "Video production with Remotion",
      "file": "../../commands/10x-video.md"
    },
    "/10x-copy": {
      "description": "Copywriting team",
      "file": "../../commands/10x-copy.md"
    },
    "/10x-design": {
      "description": "Design team",
      "file": "../../commands/10x-design.md"
    },
    "/10x-render": {
      "description": "Cloud rendering",
      "file": "../../commands/10x-render.md"
    },
    "/10x-remotion": {
      "description": "Remotion API reference",
      "file": "../../commands/10x-remotion.md"
    },
    "/10x-feedback": {
      "description": "Agentation visual feedback",
      "file": "../../commands/10x-feedback.md"
    }
  },

  "agents": {
    "leadership": ["CEO", "CMO", "Creative Director"],
    "content": ["Head of Copy", "Ad Copywriter", "Email Specialist", "Social Media Writer", "SEO Writer", "UX Writer"],
    "design": ["UI Designer", "Landing Page Specialist", "Brand Designer", "Motion Designer"],
    "video": ["Video Director", "Script Writer", "Motion Graphics Artist", "Editor"],
    "technical": ["Frontend Developer", "Analytics Specialist", "QA Specialist"]
  },

  "capabilities": {
    "remotion": {
      "packages": [
        "@remotion/cli",
        "@remotion/player",
        "@remotion/renderer",
        "@remotion/bundler",
        "@remotion/transitions",
        "@remotion/shapes",
        "@remotion/paths",
        "@remotion/gif",
        "@remotion/noise",
        "@remotion/motion-blur",
        "@remotion/three",
        "@remotion/lottie",
        "@remotion/lambda",
        "@remotion/cloudrun"
      ],
      "formats": {
        "social": { "width": 1080, "height": 1920, "fps": 30 },
        "demo": { "width": 1920, "height": 1080, "fps": 30 },
        "ad": { "width": 1080, "height": 1080, "fps": 30 }
      }
    },
    "agentation": {
      "modes": ["development", "always", "manual", "off"],
      "features": ["annotation", "ai-analysis", "export"]
    }
  },

  "environment": {
    "required": [],
    "optional": [
      "RENDERING_MODE",
      "REMOTION_AWS_ACCESS_KEY_ID",
      "REMOTION_AWS_SECRET_ACCESS_KEY",
      "REMOTION_AWS_REGION",
      "REMOTION_GCP_PROJECT_ID",
      "REMOTION_CLOUD_API_KEY",
      "NEXT_PUBLIC_AGENTATION_MODE",
      "OUTPUT_DIR"
    ]
  }
}
